<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/topLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center"
	android:gravity="center">
	<Button
		android:id="@+id/cancelScan"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/preview"
		android:layout_alignParentLeft="true"
		android:background="@drawable/rounded_shape_card"
		android:text="@string/cancel"
		android:textColor="#ffffffff" />
	<Button
		android:id="@+id/button2"
		android:layout_width="280.0dip"
		android:layout_height="50.0dip"
		android:layout_centerInParent="true"
		android:background="@drawable/scan_area" />
	<eth.tel.com.camera.CameraSourcePreview
		android:id="@id/preview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="100.0dip">
			<eth.tel.com.camera.GraphicOverlay
				android:id="@+id/graphicOverlay"
				android:layout_width="fill_parent"
				android:layout_height="100.0dip" />
		</RelativeLayout>
	</eth.tel.com.camera.CameraSourcePreview>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="50.0dip"
		android:layout_alignBottom="@id/preview"
		android:layout_alignParentRight="true"
		android:gravity="end">
		<ImageView
			android:id="@+id/iv_torch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12.0dip"
			android:layout_marginRight="11.0dip" />
	</LinearLayout>
</RelativeLayout>
